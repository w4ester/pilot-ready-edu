# .env.example â€” copy to .env and keep OUT of git

# Compose project (optional)
COMPOSE_PROJECT_NAME=edinfinite

# Postgres
POSTGRES_DB=appdb
POSTGRES_USER=app
POSTGRES_PASSWORD=app

# Backend DB URL (psycopg dialect)
DATABASE_URL=postgresql+psycopg://app:app@db:5432/appdb

# Redis
REDIS_URL=redis://redis:6379/0

# Ollama
OLLAMA_HOST=http://ollama:11434

# Web (SvelteKit) talking to API service
FASTAPI_URL=http://api:3434

# Auth/session config
SESSION_SECRET_KEY=change-me-in-prod
SESSION_COOKIE_NAME=edinfinite_session
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_SAMESITE=lax
SESSION_COOKIE_DOMAIN=
SESSION_MAX_AGE_SECONDS=43200
CSRF_COOKIE_NAME=csrf
DEV_USER_ID=
ALLOW_DEV_OVERRIDE=true

# Optional provider keys (leave blank in repo)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
AZURE_OPENAI_API_KEY=
